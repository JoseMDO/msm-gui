<h1>
  List of all directors
</h1>


<form action="">

<label for="title_field">Title</label>
<input id="title_field" type="text" name="title">

<label for="dob_field">Dob</label>
<input id="dob_field" type="text" name="dob">

<label for="bio_field">Bio</label>
<input id="bio_field" type="text" name="bio">

<label for="image_field">Image</label>
<input id="image_field" type="text" name="image">


</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
